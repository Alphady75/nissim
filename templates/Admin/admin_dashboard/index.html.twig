{% extends 'admin.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block colclass %}col-12{% endblock %}

{% block body %}

<div class="row">
	<div class="col-xl-4 col-sm-4 m-t35">
		<div class="widget-stat card">
			<div class="card-body p-4">
				<div class="media ai-icon">
					<span class="mr-3 bgl-primary text-primary">
						<i class="fa fa-users"></i>
					</span>
					<div class="media-body">
						<p class="mb-1">Utilisateurs</p>
						<h4 class="mb-0">{{ (users|length)|number_format(0, '.', ' ') }}</h4>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-xl-4 col-sm-4 m-t35">
		<div class="widget-stat card">
			<div class="card-body p-4">
				<div class="media ai-icon">
					<span class="mr-3 bgl-primary text-primary">
						<i class="fa fa-folder"></i>
					</span>
					<div class="media-body">
						<p class="mb-1">Projets</p>
						<h4 class="mb-0">{{ (projets|length)|number_format(0, '.', ' ') }}</h4>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-xl-4 col-sm-4 m-t35">
		<div class="widget-stat card">
			<div class="card-body p-4">
				<div class="media ai-icon">
					<span class="mr-3 bgl-primary text-primary">
						<i class="fa fa-credit-card"></i>
					</span>
					<div class="media-body">
						<p class="mb-1">Financements reussi ({{ (financementsReussi|length)|number_format(0, '.', ' ') }})</p>
						<span class="badge badge-outline-primary">{{ (totalFinancements.montantTotal)|number_format(0, '.', ' ') ~ currency }} Collecté</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-xl-6 col-xxl-12">
		<div class="row">

			<div class="col-xl-12">
				<div class="card">
					<div class="card-header pb-2 d-block d-sm-flex flex-wrap border-0">
						<div class="mb-3">
							<h4 class="fs-20 text-black">Dernières transactions</h4>
							<p class="mb-0 fs-12">Financement de projets</p>
						</div>
					</div>
					<div class="card-body tab-content p-0">
						<div class="tab-pane active show fade" id="monthly">

							{% include "admin/admin_financement_crud/_tableau.html.twig" %}
							
						</div>
					</div>
					<div class="card-footer border-0 p-0 caret mt-1">
						<a href="{{ path('app_admin_financement_crud_index') }}" class="btn-link">
							<i class="fa fa-caret-down" aria-hidden="true"></i>
						</a>
					</div>
				</div>
			</div>

			<div class="col-xl-12 mt-2">
				<div class="card">
					<div class="card-header d-sm-flex d-block pb-0 border-0">
						<div>
							<h4 class="fs-20 text-black">Dernières inscriptions</h4>
							<p class="mb-0 fs-12">Lorem ipsum dolor sit amet, consectetur</p>
						</div>
					</div>
					<div class="card-body">
						<div class="testimonial-one px-4 owl-right-nav owl-carousel owl-loaded owl-drag">
							{% for user in users %}
								<div class="items">
									<div class="text-center">
										<img class="mb-3 rounded" src="{{ asset('img/user.jpg') }}" alt="">
										<h5 class="mb-0" style="font-size: 15px!important;">
											<a class="text-black" href="javascript:void(0);">{{ user.nom }}</a>
										</h5>
										<span class="fs-12">{{ user.email }}</span>
									</div>
								</div>
							{% endfor %}
						</div>
						<div class="row pt-sm-5 pt-3 align-items-center">
							<div class="col-sm-4">
								<a href="{{ path('app_admin_users_crud_index') }}" class="btn btn-secondary d-block btn-lg"><i class="fa fa-users"></i> Tout les utilisateurs</a>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

{% endblock %}
