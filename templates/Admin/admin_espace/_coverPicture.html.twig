<div class="row">
	<div class="col-lg-12">
		<div class="profile card card-body px-3 pt-3 pb-0">
			<div class="profile-head">
				<div class="photo-content">
					<div class="cover-photo" style="background-image: url('{{ asset('themes/front/assets/img/cabane-one-performance.jpg')  }}');"></div>
				</div>
				<div class="profile-info">
					<div class="profile-photo">
						<img src="{{ asset('img/user.jpg') }}" class="img-fluid rounded-circle" alt="">
					</div>
					<div class="profile-details">
						<div class="profile-name px-3 pt-2">
							<h4 class="text-primary mb-0">{{ app.user.nom }}</h4>
							<p>
								{% if is_granted('ROLE_ADMIN') %}Administrateur
								{% endif %}
							</p>
						</div>
						<div class="profile-email px-2 pt-2">
							<h4 class="text-muted mb-0">{{ app.user.email }}</h4>
							<p>Email</p>
						</div>
						<div class="dropdown ml-auto">
							<a href="#" class="btn btn-primary light sharp" data-toggle="dropdown" aria-expanded="true">
								<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="18px" height="18px" viewbox="0 0 24 24" version="1.1">
									<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
										<rect x="0" y="0" width="24" height="24"></rect>
										<circle fill="#000000" cx="5" cy="12" r="2"></circle>
										<circle fill="#000000" cx="12" cy="12" r="2"></circle>
										<circle fill="#000000" cx="19" cy="12" r="2"></circle>
									</g>
								</svg>
							</a>
							<div class="dropdown-menu dropdown-menu-right">
								<a href="{{ path('app_admin_edit_profile') }}" class="dropdown-item">
									<i class="fa fa-user-circle text-primary mr-2"></i>
									Editer votre profil</a>
								<a href="{{ path('app_admin_reset_password') }}" class="dropdown-item">
									<i class="fa fa-lock text-primary mr-2"></i>
									Modifier votre mot de passe</a>
								<a href="{{ path('app_logout') }}" class="dropdown-item">
									<i class="fa fa-ban text-primary mr-2"></i>
									Deconnexion</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
