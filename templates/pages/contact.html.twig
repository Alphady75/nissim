{% extends "base.html.twig" %}

{% block title %} Nous contacter {% endblock %}

{% block body %}

<section class="section-banner" style="background-image: url({{ asset('themes/front/assets/img/cabane-one-performance.jpg') }});">

	<div class="caption">
		<div class="container">
			<h1>Nous contacter</h1>
		</div>
	</div>
</section>

<!-- START Contact Us AREA -->
<section id="contact" class="contact-us section-padding bg-light">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-6 col-md-7 col-sm-12 col-xs-12">
				<div class="section-title text-left wow zoomIn">
					<span>Restons en contact</span>
					<h2>Lorem ipsum dolor sit amet.</h2>
				</div>
				{{ form_start(form, {'attr': {'class': 'contact-form'}}) }}
				<div class="row">

					<div class="form-group col-md-6">
						{{ form_row(form.nom) }}
					</div>
					<div class="form-group col-md-6">
						{{ form_row(form.email) }}
					</div>
					<div class="form-group col-md-12">
						{{ form_row(form.sujet) }}
					</div>
					<div class="form-group col-md-12">
						{{ form_row(form.content) }}
					</div>
					<div class="col-md-12 text-left">
						<button type="submit" value="Send message" name="submit" class="btn-home-border" title="Submit Your Message!">Envoyer votre Message</button>
					</div>
					</div>
				{{ form_end(form) }}
			</div>
			<!-- END COL-->

			<div class="col-lg-6 col-md-5 col-sm-12 col-xs-12">

				<div class="bg-white shadow p-5 rounded">

					<div class="single-contact">
						<div class="media">
						<i class="ti-info"></i>
							<div class="media-body">
								<div class="contact-content">
									{{ appName }}, Société à responsabilité limité (S.A.R.L) au capital de 2500{{ currency }}
									immatriculée au code estonien suivant : <span class="text-uppercase">code d'enregistrement/ registry code : 16489925</span>
								</div>
							</div>
						</div>
						
					</div>
					<!-- END single-contact -->

					<div class="single-contact">
						<i class="ti-location-pin"></i>
						<div class="contact-content">
							Siège Social : Harju maako nd, Tallinn, Kesklinna linnaosa, Ahtri tn 12, 10151 Estonie
						</div>
					</div>
					<!-- END single-contact -->
	
					<div class="single-contact">
						<i class="ti-email"></i>
						<div class="contact-content">
							Contact@nissim-contruction.com <br>
							{{ appTel }}
						</div>
					</div>
					<!-- END single-contact -->
	
					<div class="single-contact">
						<i class="ti-link"></i>
						<div class="contact-content">
							<a href="https://nissim-construction.com">https://nissim-construction.com</a><br>
							<a href="https://www.amf-france.org">https://www.amf-france.org</a>
						</div>
					</div>
					<!-- END single-contact -->
				</div>
			</div>
			<!-- END Col -->
		</div>
		<!-- END ROW -->
	</div>
	<!-- END CONTAINER -->
</section>
<!-- END Contact Us -->


{% endblock %}