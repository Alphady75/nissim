{% extends 'base.html.twig' %}

{% block title %}Financement du projet | {{ projet.name }}{% endblock %}

{% block body %}

{% include "financement/_paiementBanner.html.twig" %}

<!-- PROCED TO PAYMENT SECTION -->
<section class="section-proced-to-payment costom-padding-style2">
	<div class="container">
		<div class="pt-4 pb-4">
			<h4>Procéder au financement</h4>
			<div class="row pt-4">
				<div class="col-md-6 align-items-stretch">
					{{ include('financement/_form.html.twig') }}
				</div>

				<div class="col-md-6 align-items-stretch">
					<div class="bg-light p-4 rounded h-100">
						<h4 class="card-title">Détails du Projet à financer</h4>

						<div class="row mt-3">

                            {% if projet.imageName %}
                                <div class="col-lg-5">
                                    <img src="{{ vich_uploader_asset(projet) | imagine_filter('large_size') }}" class="img-fluid" alt="image"/>
                                </div>
                            {% endif %}

							<div class="col-lg-{{ projet.imageName ? 7 : 12 }}">
								<div class="table-responsive">
									<table class="table table-borderless">
										<tbody>
											<tr>
												<th>
													<i class="fa fa-credit-card"></i>
													Montant financé:</th>
												<td>
													<strong class="font-weight-bold">{{ projet.mCollecte|number_format(2, '.', ' ') ~ currency }}</strong>
												</td>
											</tr>
											<tr>
												<th>Seuil minimum de collecte</th>
												<td>
													<strong class="font-weight-bold">{{ projet.smCollecte|number_format(2, '.', ' ') ~ currency }}</strong>
												</td>
											</tr>
											<tr>
												<th>
													<i class="fa fa-calendar"></i>
													Date de clo</th>
												<td>
													<span>{{ projet.endDate|date('d/m/Y') }}</span>
												</td>
											</tr>
                                            {% if projet.fStatut == 1 %}
                                            
                                                <tr>
                                                    <th class="font-16 font-16">
                                                        <i class="fa fa-info"></i>
                                                        Statut</th>
                                                    <td>
                                                        <span class="badge badge-primary small">collecte réussie</span>
                                                    </td>
                                                </tr>

                                            {% endif %}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>
<!-- END PROCED TO PAYMENT SECTION-->
{% endblock %}
